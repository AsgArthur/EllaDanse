<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DesinscriptionController">

    <top>
        <VBox spacing="5">
            <padding>
                <Insets bottom="10" left="15" right="15" top="15" />
            </padding>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Désinscription d'un cours" />
            <Separator />
        </VBox>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets bottom="10" left="15" right="15" top="10" />
            </padding>

            <VBox spacing="8">
                <Label style="-fx-font-weight: bold;" text="1. Sélectionner un membre :" />
                <ComboBox fx:id="membreComboBox" prefWidth="300" promptText="Choisir un membre..." onAction="#onMembreChanged" />
                <Label fx:id="infoLabel" style="-fx-text-fill: #666666; -fx-font-size: 12px;" wrapText="true" />
            </VBox>

            <Separator />

            <VBox spacing="8">
                <Label style="-fx-font-weight: bold;" text="2. Sélectionner la saison :" />
                <ComboBox fx:id="saisonComboBox" prefWidth="200" promptText="Choisir une saison..." onAction="#onSaisonChanged" />
            </VBox>

            <Separator />

            <VBox spacing="8">
                <Label style="-fx-font-weight: bold;" text="3. Sélectionner le cours à désinscrire :" />
                <ListView fx:id="coursInscritsListView" prefHeight="120" onMouseClicked="#onCoursSelected">
                    <placeholder>
                        <Label text="Aucun cours trouvé pour cette sélection" />
                    </placeholder>
                </ListView>
            </VBox>

            <Label fx:id="messageLabel" style="-fx-background-color: #e8f5e8; -fx-padding: 8px; -fx-background-radius: 4px;" visible="false" wrapText="true" />

        </VBox>
    </center>

    <bottom>
        <VBox spacing="5">
            <Separator />
            <HBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="10" />
                </padding>

                <Button fx:id="desinscrireBtn" onAction="#handleDesinscrire" prefWidth="150" style="-fx-background-color: #ff9800; -fx-text-fill: white;" text="Désinscrire du cours" />
                <Button fx:id="desinscrireTousBtn" onAction="#annulerToutesInscriptions" prefWidth="180" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Annuler toutes inscriptions" />
                <Button fx:id="rechercherMembreBtn" onAction="#rechercherMembre" prefWidth="140" text="Rechercher membre" />
                <Button fx:id="fermerBtn" onAction="#fermer" prefWidth="80" text="Fermer" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>