                        <Label text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="emailField" promptText="nom@exemple.com" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label text="TÃ©lÃ©phone :" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <TextField fx:id="telephoneField" promptText="0123456789" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </GridPane>
                </VBox>

                <Separator/>

                <!-- Inscription aux cours -->
                <VBox spacing="10">
                    <Label text="Inscription aux cours" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Saison *:"/>
                        <ComboBox fx:id="saisonComboBox" prefWidth="150"/>
                    </HBox>

                    <VBox spacing="5">
                        <Label text="Cours disponibles * (sÃ©lection multiple possible):"/>
                        <ListView fx:id="coursListView" prefHeight="120">
                            <tooltip>
                                <Tooltip text="Maintenez Ctrl pour sÃ©lectionner plusieurs cours"/>
                            </tooltip>
                        </ListView>
                        <Label text="ðŸ’¡ Les cours en conflit d'horaires ne peuvent pas Ãªtre sÃ©lectionnÃ©s ensemble"
                               style="-fx-font-size: 11px; -fx-text-fill: #666666;"/>
                    </VBox>
                </VBox>

                <!-- Message d'information/erreur -->
                <Label fx:id="messageLabel" wrapText="true" visible="false"
                       style="-fx-background-color: #f0f0f0; -fx-padding: 8px; -fx-background-radius: 4px;"/>

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <VBox spacing="5">
            <Separator/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <padding>
                    <Insets top="10" right="15" bottom="15" left="15"/>
                </padding>

                <Button fx:id="validerBtn" text="Valider inscription" onAction="#validerInscription"
                        prefWidth="140" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="RÃ©initialiser" onAction="#reinitialiser" prefWidth="100"/>
                <Button fx:id="annulerBtn" text="Annuler" onAction="#annuler" prefWidth="80"/>
