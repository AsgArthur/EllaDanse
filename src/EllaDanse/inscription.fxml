                <!-- Informations personnelles -->
                <VBox spacing="10">
                    <Label text="Informations personnelles" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="120" prefWidth="120"/>
                            <ColumnConstraints minWidth="200" prefWidth="250"/>
                        </columnConstraints>

                        <Label text="Nom *:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="nomField" promptText="Nom de famille" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="PrÃ©nom *:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
