                <TableColumn fx:id="prenomCol" text="PrÃ©nom" prefWidth="120" minWidth="100"/>
                <TableColumn fx:id="ageCol" text="Ã‚ge" prefWidth="60" minWidth="50" maxWidth="80"/>
                <TableColumn fx:id="emailCol" text="Email" prefWidth="180" minWidth="150"/>
                <TableColumn fx:id="saisonCol" text="Saison" prefWidth="100" minWidth="80"/>
                <TableColumn fx:id="coursCol" text="Cours" prefWidth="200" minWidth="150"/>
            </columns>
            <placeholder>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="ðŸ‘¥ Aucun membre trouvÃ©" style="-fx-font-size: 16px; -fx-text-fill: #999999;"/>
                    <Label text="Utilisez les filtres ou ajoutez de nouveaux membres" style="-fx-font-size: 12px; -fx-text-fill: #999999;"/>
                </VBox>
            </placeholder>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="5">
            <Separator/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <padding>
                    <Insets top="10" right="15" bottom="15" left="15"/>
                </padding>

                <Label text="ðŸ’¡ Double-cliquez sur un membre pour voir son profil"
                       style="-fx-font-size: 11px; -fx-text-fill: #666666;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="profilBtn" text="Voir profil" onAction="#ouvrirProfilMembre"
                        prefWidth="100" style="-fx-background-color: #9c27b0; -fx-text-fill: white;" disable="true"/>
