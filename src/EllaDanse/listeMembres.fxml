<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EllaDanse.vue.CtrlListeMembres">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="15" right="15" top="15" />
