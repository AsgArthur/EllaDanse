                <Separator orientation="VERTICAL"/>

                <Label text="Tri :"/>
                <ComboBox fx:id="triComboBox" prefWidth="200" onAction="#changerTri"/>

                <Separator orientation="VERTICAL"/>

                <Label text="Recherche :"/>
                <TextField fx:id="rechercheField" promptText="Nom, prÃ©nom, email..." prefWidth="200" onKeyReleased="#filtrerParRecherche"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="totalMembresLabel" text="Total : 0 membre(s)"
                       style="-fx-font-weight: bold; -fx-text-fill: #666666;"/>
            </HBox>

            <Separator/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="membresTable" prefHeight="400" onMouseClicked="#gererDoubleClic">
            <columns>
                <TableColumn fx:id="idCol" text="NÂ°" prefWidth="50" minWidth="50" maxWidth="60"/>
